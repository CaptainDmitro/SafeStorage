<Window x:Class="SafeStorage.ControlWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SafeStorage"
        mc:Ignorable="d"
        Title="SafeStrorage - Control panel" Height="450" Width="400" Closed="Window_Closed">
    <Grid Margin="10,10,10,0">
        <ListBox x:Name="ListBox_Files" Height="350" Margin="10,10,10,50"/>
        <Grid Margin="3,0,0,10" HorizontalAlignment="Center" VerticalAlignment="Bottom">
            <Button x:Name="Button_Upload" Content="Upload" VerticalAlignment="Top" Click="Button_Upload_Click" Width="58" HorizontalAlignment="Left"/>
            <Button x:Name="Button_Download" Content="Download" Margin="82,0,0,0" VerticalAlignment="Top" Click="Button_Download_Click" HorizontalAlignment="Left"/>
            <Button x:Name="Button_Delete" Content="Delete" Margin="162,0,0,0" VerticalAlignment="Top" Click="Button_Delete_Click" Width="58" HorizontalAlignment="Left"/>
        </Grid>
    </Grid>
</Window>
