<Window x:Class="SafeStorage.View.BackupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SafeStorage.View"
        mc:Ignorable="d"
        Title="Резервное копирование" Height="100" Width="200" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Closed="Window_Closed" Background="#FF681487" WindowStyle="None">
    <Grid>
        <StackPanel Margin="10, 10, 10, 0">
            
            <Border Background="White" Opacity="1" Height="85" CornerRadius="5">
                <StackPanel>
                    <CheckBox x:Name="CheckBox_Backup_Server" Style="{StaticResource MaterialDesignAccentCheckBox}" Content="Сохранить на сервере"/>
                    <CheckBox x:Name="CheckBox_Backup_Client" Style="{StaticResource MaterialDesignAccentCheckBox}" Content="Сохранить на компьютере"/>
                    <Button x:Name="Button_Upload" Click="Button_Backup_Click" Margin="10" Content="Выполнить"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</Window>
