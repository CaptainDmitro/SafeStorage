<Window x:Class="SafeStorage.ControlWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SafeStorage"
        mc:Ignorable="d"
        Title="SafeStrorage - Контрольная панель" Height="400" Width="560" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Closed="Window_Closed" Background="#FF681487" WindowStyle="None">
    <Grid>
        <StackPanel Margin="10, 10, 10, 0">
            <Border Background="White" Opacity="1" Height="330" CornerRadius="5">
                <ListBox x:Name="ListBox_Files" Style="{StaticResource MaterialDesignListBox}"/>
            </Border>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0, 335, 0, 0">
            <Button x:Name="Button_Upload" Click="Button_Upload_Click" Margin="15" Content="Загрузить"/>
            <Button x:Name="Button_Download" Click="Button_Download_Click" Margin="15" Content="Скачать"/>
            <Button x:Name="Button_Delete" Click="Button_Delete_Click" Margin="15" Content="Удалить"/>
            <Button x:Name="Button_Backup" Click="Button_BackupWindow_Click" Margin="15" Content="Резервное копирование"/>
        </StackPanel>
    </Grid>
</Window>
